<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proje.controller.LoginController">
   <children>
      <HBox prefHeight="500" prefWidth="800">
      
          <!-- SOL TARAF: ARKA PLAN RESİM -->
          <ImageView fitHeight="543.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
              <Image url="@./background.jpg" />
          </ImageView>
      
          <!-- SAĞ TARAF: GİRİŞ FORMU -->
          <VBox alignment="CENTER" prefWidth="400" spacing="20" styleClass="form-panel">
              <Label styleClass="header-title" />
              <Label styleClass="welcome-title" text="HOŞGELDİNİZ!" />
              <Label styleClass="sub-title" text="Topluluk Yönetim Sistemi" />
      
              <!-- Email -->
              <TextField fx:id="emailAlan" prefWidth="237.0" promptText="Email" styleClass="input-field" />
      
              <!-- Password -->
              <PasswordField fx:id="sifreAlan" promptText="Password" styleClass="input-field" />
      
              <!-- Forgot Password? -->
              <Label styleClass="forgot-link" text="Şifremi Unuttum" />
      
              <!-- OR -->
              <HBox alignment="CENTER" spacing="10">
                  <Label prefHeight="18.0" prefWidth="112.0" styleClass="or-separator" text="——— ya da ———" />
              </HBox>
      
              <!-- Google Login Button -->
              <Button styleClass="google-button" text="OBS ile Giriş" />
      
              <!-- Login Button -->
              <Button onAction="#girisYap" styleClass="login-button" text="Giriş" />
      
          </VBox>
      </HBox>
   </children>
</AnchorPane>
