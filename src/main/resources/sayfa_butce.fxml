<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="500.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: #F4F7FA; -fx-padding: 30;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proje.controller.ButceController">

    <Label text="Bütçe Yönetimi" textFill="#2d3447">
        <font><Font name="System Bold" size="24.0" /></font>
    </Label>

    <!-- KARTLAR -->
    <HBox spacing="20.0">
        <VBox alignment="CENTER" prefHeight="90.0" prefWidth="160.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <Label text="Toplam Gelir" textFill="#7f8c8d" />
            <Label fx:id="lblGelir" text="0.0 TL" textFill="#27ae60">
                <font><Font name="System Bold" size="20.0" /></font>
            </Label>
        </VBox>
        <VBox alignment="CENTER" prefHeight="90.0" prefWidth="160.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <Label text="Toplam Gider" textFill="#7f8c8d" />
            <Label fx:id="lblGider" text="0.0 TL" textFill="#c0392b">
                <font><Font name="System Bold" size="20.0" /></font>
            </Label>
        </VBox>
        <VBox alignment="CENTER" prefHeight="90.0" prefWidth="160.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <Label text="Kayıt Sayısı" textFill="#7f8c8d" />
            <Label fx:id="lblKayitSayisi" text="0" textFill="#2980b9">
                <font><Font name="System Bold" size="20.0" /></font>
            </Label>
        </VBox>
        <VBox alignment="CENTER" prefHeight="90.0" prefWidth="160.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <Label text="Net Bakiye" textFill="#7f8c8d" />
            <Label fx:id="lblBakiye" text="0.0 TL" textFill="#2980b9">
                <font><Font name="System Bold" size="20.0" /></font>
            </Label>
        </VBox>
    </HBox>

    <!-- TABLO -->
    <TableView fx:id="tabloButce" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colTarih" prefWidth="100.0" text="Tarih" />
            <TableColumn fx:id="colTur" prefWidth="120.0" text="Tür" />
            <TableColumn fx:id="colAciklama" prefWidth="250.0" text="Açıklama" />
            <TableColumn fx:id="colMiktar" prefWidth="100.0" text="Miktar" />
        </columns>
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
    </TableView>

    <!-- EKLEME FORMU - BUTONLAR DÜZELTİLDİ -->
    <HBox spacing="10.0" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 10;">

        <ComboBox fx:id="cmbTur" prefWidth="150.0" promptText="Kategori Seç" />

        <DatePicker fx:id="datePicker" prefWidth="110.0" />

        <TextField fx:id="txtAciklama" promptText="Açıklama giriniz..." HBox.hgrow="ALWAYS" />

        <TextField fx:id="txtMiktar" prefWidth="80.0" promptText="Tutar" />

        <!-- BUTONLAR BURADA -->
        <Button onAction="#btnEkle" text="Ekle" prefWidth="70.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />

        <Button onAction="#btnSil" text="Sil" prefWidth="60.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />

    </HBox>
</VBox>